{
  "name": "nxp-easy-cart",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:admin": "vite --config build/vite.config.admin.js",
    "build:admin": "vite build --config build/vite.config.admin.js",
    "dev:site": "vite --config build/vite.config.site.js",
    "build:site:css": "sass media/com_nxpeasycart/src/site.scss media/com_nxpeasycart/css/site.css --no-source-map --style=expanded",
    "build:site": "npm run build:site:css && vite build --config build/vite.config.site.js",
    "sync:assets": "node tools/sync-asset-manifest.js",
    "postbuild:site": "npm run sync:assets",
    "test:js": "node --test media/com_nxpeasycart/src/site/utils/__tests__/gatewayOptions.test.js",
    "test:vue": "vitest run",
    "test:vue:watch": "vitest",
    "test:vue:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^27.3.0",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.93.3",
    "vite": "^5.2.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "vue": "^3.5.11"
  }
}
