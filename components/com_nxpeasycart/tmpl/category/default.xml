<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_NXPEASYCART_SITE_MENU_CATEGORY">
        <message>COM_NXPEASYCART_MENU_CATEGORY_DESC</message>
    </layout>
    <fields name="request">
        <fieldset name="request" addfieldprefix="Joomla\Component\Nxpeasycart\Administrator\Field">
            <field
                name="id"
                type="CategorySelect"
                label="COM_NXPEASYCART_FIELD_CATEGORY_ID"
                description="COM_NXPEASYCART_FIELD_CATEGORY_ID_DESC"
                translate_default="true"
                required="false"
            />
        </fieldset>
    </fields>

    <fields name="params">
        <fieldset name="basic">
            <field
                name="root_categories"
                type="sql"
                multiple="true"
                label="COM_NXPEASYCART_FIELD_ROOT_CATEGORIES"
                description="COM_NXPEASYCART_FIELD_ROOT_CATEGORIES_DESC"
                required="false"
            >
                <query>
                    SELECT id AS value, title AS text
                    FROM #__nxp_easycart_categories
                    WHERE parent_id IS NULL OR parent_id = 0
                    ORDER BY sort ASC, title ASC
                </query>
            </field>
        </fieldset>
    </fields>
</metadata>
