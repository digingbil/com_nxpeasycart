<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade" version="5.0">
    <name>COM_NXPEASYCART</name>
    <creationDate>2025-10-28</creationDate>
    <author>nexusplugins.com</author>
    <authorEmail>hello@nexusplugins.com</authorEmail>
    <authorUrl>https://nexusplugins.com</authorUrl>
    <copyright>Copyright (C) 2024 NXP Commerce - 2025 nexusplugins.com. All rights reserved.</copyright>
    <version>0.1.11</version>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <description>COM_NXPEASYCART_XML_DESCRIPTION</description>
    <scriptfile>script.php</scriptfile>

    <namespace path="src">Joomla\Component\Nxpeasycart</namespace>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <!-- Site files (frontend) - at root level like com_content -->
    <files folder="site">
        <filename>index.html</filename>
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/com_nxpeasycart.ini</language>
        <language tag="de-DE">de-DE/com_nxpeasycart.ini</language>
        <language tag="el-GR">el-GR/com_nxpeasycart.ini</language>
        <language tag="fr-FR">fr-FR/com_nxpeasycart.ini</language>
        <language tag="mk-MK">mk-MK/com_nxpeasycart.ini</language>
    </languages>

    <media destination="com_nxpeasycart" folder="media">
        <filename>index.html</filename>
        <filename>joomla.asset.json</filename>
        <folder>css</folder>
        <folder>js</folder>
    </media>

    <administration>
        <menu img="class:cart">COM_NXPEASYCART</menu>

        <submenu>
            <menu link="option=com_nxpeasycart&amp;view=app" view="app">COM_NXPEASYCART_MENU_DASHBOARD</menu>
            <menu link="option=com_nxpeasycart&amp;view=products" view="products">COM_NXPEASYCART_MENU_PRODUCTS</menu>
            <menu link="option=com_nxpeasycart&amp;view=categories" view="categories">COM_NXPEASYCART_MENU_CATEGORIES</menu>
            <menu link="option=com_nxpeasycart&amp;view=orders" view="orders">COM_NXPEASYCART_MENU_ORDERS</menu>
            <menu link="option=com_nxpeasycart&amp;view=customers" view="customers">COM_NXPEASYCART_MENU_CUSTOMERS</menu>
            <menu link="option=com_nxpeasycart&amp;view=coupons" view="coupons">COM_NXPEASYCART_MENU_COUPONS</menu>
            <menu link="option=com_nxpeasycart&amp;view=tax" view="tax">COM_NXPEASYCART_MENU_TAX</menu>
            <menu link="option=com_nxpeasycart&amp;view=shipping" view="shipping">COM_NXPEASYCART_MENU_SHIPPING</menu>
            <menu link="option=com_nxpeasycart&amp;view=settings" view="settings">COM_NXPEASYCART_MENU_SETTINGS</menu>
        </submenu>

        <files folder="admin">
            <folder>services</folder>
            <folder>src</folder>
            <folder>sql</folder>
            <folder>forms</folder>
            <folder>templates</folder>
            <folder>tmpl</folder>
            <folder>vendor</folder>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>LICENSE.txt</filename>
        </files>

        <languages folder="admin/language">
            <language tag="en-GB">en-GB/com_nxpeasycart.ini</language>
            <language tag="en-GB">en-GB/com_nxpeasycart.sys.ini</language>
            <language tag="de-DE">de-DE/com_nxpeasycart.ini</language>
            <language tag="de-DE">de-DE/com_nxpeasycart.sys.ini</language>
            <language tag="el-GR">el-GR/com_nxpeasycart.ini</language>
            <language tag="el-GR">el-GR/com_nxpeasycart.sys.ini</language>
            <language tag="fr-FR">fr-FR/com_nxpeasycart.ini</language>
            <language tag="fr-FR">fr-FR/com_nxpeasycart.sys.ini</language>
            <language tag="mk-MK">mk-MK/com_nxpeasycart.ini</language>
            <language tag="mk-MK">mk-MK/com_nxpeasycart.sys.ini</language>
        </languages>
    </administration>

    <updateservers>
        <server type="extension" priority="1" name="NXP Easy Cart Updates">https://updates.nexusplugins.com/com_nxpeasycart.xml</server>
    </updateservers>
</extension>
