<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="basic">
        <field
            name="id"
            type="hidden"
        />

        <field
            name="title"
            type="text"
            required="true"
            filter="string"
            label="COM_NXPEASYCART_FIELD_CATEGORY_TITLE"
        />

        <field
            name="slug"
            type="text"
            filter="string"
            label="COM_NXPEASYCART_FIELD_CATEGORY_SLUG"
        />

        <field
            name="parent_id"
            type="integer"
            filter="integer"
            label="COM_NXPEASYCART_FIELD_CATEGORY_PARENT"
        />

        <field
            name="sort"
            type="integer"
            filter="integer"
            default="0"
            label="COM_NXPEASYCART_FIELD_CATEGORY_SORT"
        />
    </fieldset>
</form>
