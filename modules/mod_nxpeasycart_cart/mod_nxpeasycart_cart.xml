<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade" version="5.0">
    <name>mod_nxpeasycart_cart</name>
    <version>0.1.6</version>
    <author>NXP Easy Cart</author>
    <description>MOD_NXPEASYCART_CART_DESC</description>
    <files>
        <filename module="mod_nxpeasycart_cart">mod_nxpeasycart_cart.php</filename>
        <folder>tmpl</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/mod_nxpeasycart_cart.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="display_mode"
                    type="list"
                    label="MOD_NXPEASYCART_CART_DISPLAY_MODE_LABEL"
                    description="MOD_NXPEASYCART_CART_DISPLAY_MODE_DESC"
                    default="default"
                >
                    <option value="default">MOD_NXPEASYCART_CART_DISPLAY_MODE_DEFAULT</option>
                    <option value="floating">MOD_NXPEASYCART_CART_DISPLAY_MODE_FLOATING</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field
                    name="cache"
                    type="hidden"
                    default="0"
                />
                <field
                    name="cache_time"
                    type="hidden"
                    default="0"
                />
            </fieldset>
        </fields>
    </config>
</extension>
